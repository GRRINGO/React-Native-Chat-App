{
  "rules": {
    "users": {
      "$uid": {
      ".indexOn": "displayName",
      ".write": "$uid === auth.uid",
      ".read": "auth.uid != null"
      }
    },
    "push_keys": {
      ".read": false,
      ".write": false
    },
    "messages": {
      "$chat": {
        ".read": "auth.uid != null && root.child('members').child($chat).child(auth.uid).val() === true",
        ".write": "auth.uid != null && root.child('members').child($chat).child(auth.uid).val() === true"
      }
    },
    "members": {
      "$chat": {
        ".read": "auth.uid != null && root.child('members').child($chat).child(auth.uid).val() === true",
        ".write": "auth.uid != null && root.child('members').child($chat).child(auth.uid).val() === true"
      }
    },
    "image_labels": {
      ".read": "auth.uid != null",
      ".write": false
    },
    "chats": {
      "$chat": {
        ".read": "auth.uid != null && root.child('members').child($chat).child(auth.uid).val() === true",
        ".write": "auth.uid != null && root.child('members').child($chat).child(auth.uid).val() === true"
      }
    }
  }
}
